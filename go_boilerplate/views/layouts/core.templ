package layouts

import "github.com/__username__/go_boilerplate/internal/models"
import "github.com/__username__/go_boilerplate/views/components"

templ CoreHTML(site models.Site) {
	<!DOCTYPE html>
	<html lang="en">
		@components.SEO(site)
		<body class="bg-std antialiased min-h-screen transition-colors">
			{ children... }
		</body>
		for _, script := range site.PageScripts {
			@components.Script(script, site.Nonce)
		}
	</html>
}
